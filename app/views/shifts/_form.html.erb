<%= simple_form_for(@shift) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :day %>
    <%= f.association :crew %>
    <%= f.association :user %>
    <%= f.input :role %>
    <%= f.association :shift %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
